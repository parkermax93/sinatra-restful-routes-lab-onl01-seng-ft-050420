<h1>Edit <%= @recipe.name %></h1>
<form method="POST" action="/recipes/<%= @recipe.id %>">
    <input type="hidden" value="PATCH" name="_method">
    <h1>Name: <input type="text" name="name" value="<%= @recipe.name %>"></h1>
    <h1>Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h1>
    <h1>Cook Time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"</h1>
    <input type="submit" name="Submit" value="Submit">
</form>  